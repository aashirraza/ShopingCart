@model IEnumerable<SC.Business.Model.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>
<div>
    <form asp-action="Index" method="get">
        <input type="hidden" name="StoreId" value="@ViewBag.StoreId" />
        <input type="text" name="search" class="form-control" value="@ViewBag.searchTerm"  />
        <input type="submit" value="search" class="btn btn-primary" />
    </form>
</div>

<p>
    <a asp-action="Create" asp-route-StoreId="@ViewBag.StoreId">Add Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catagory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catagory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
